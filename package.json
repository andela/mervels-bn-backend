{
  "name": "express-barefoot-nomad",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./src/build && babel ./src/. --out-dir ./src/build --copy-files",
    "db-migrate": "sequelize db:migrate --env production",
    "db-migrate:dev": "sequelize db:migrate --env development",
    "db-migrate:test": "sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "prettier-eslint  '**/*.js' --write",
    "start": "npm run db-migrate && npm run build && node ./src/build/index.js",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "docker:start": "npm run db-migrate:dev && npm run start:dev",
    "test": "export NODE_ENV=test && npm run db-migrate:test && nyc --reporter=html --reporter=text mocha --require @babel/register ./src/test/*.js --timeout 60000 --exit",
    "cover": "nyc --reporter=html --reporter=text npm test",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@hapi/joi": "^15.1.1",
    "@passport-next/passport-mocked": "^1.3.0",
    "@sendgrid/mail": "^6.4.0",
    "babel-watch": "^7.0.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "redis": "^2.8.0",
    "request": "^2.87.0",
    "sequelize": "^5.18.1",
    "sequelize-cli": "^5.5.1",
    "swagger-node-express": "^2.1.3",
    "swagger-ui-express": "^4.0.7",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.6.1",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0"
  }
}
